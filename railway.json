{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run server:build",
    "watchPatterns": ["apps/server/src/**"]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run server:start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
